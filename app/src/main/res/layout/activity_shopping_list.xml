<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/shoppingListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoppingTitle"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:padding="20dp"
        android:textAlignment="center"
        >

    </TextView>
    <TextView
        android:id="@+id/shoppingListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopping"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAllCaps="true">

    </TextView>
    <TextView
        android:id="@+id/shoppingListViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoppingEmpty"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAllCaps="true">

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/shoppingGoodbye"
        android:id="@+id/shoppingListGoodbye"
        android:onClick="shoppingListToMain"
        android:layout_marginTop="30dp">

    </Button>


</LinearLayout>